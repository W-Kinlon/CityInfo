/* pages/room/room.wxss */
.room{
  width: 750rpx;
  height: 45px;
  line-height: 45px;
  background-color:white;
  color: blue;
  text-align: center;
  font-size: 20px;
}
.chat{
  display: flex;
 align-items: center;
  padding-bottom: 5px;
  margin-bottom: 41px;

}
.chatuser{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 5px;
  margin-bottom: 41px;

}

.left{
  width: 180rpx;
  margin-right:20rpx ;
  margin-top: 20rpx;
}



.right{
  width: auto;

  margin: 15rpx;
}


.bigchat{
  position: relative;  
  border-radius:5px;
background-color: green;
  border: 1px ;
}

.bigchat1{
  position: relative;  
  border-radius:5px;
background-color: green;
  border: 1px ;
  margin-right: 15rpx;
}

#san{
 width: 25rpx;
 height: 25rpx;
 position: absolute;
 top: 30rpx;
 left: -11rpx;
 transform: rotate(-45deg);
 background-color: green;
}
#sanuser{
  width: 25rpx;
  height: 25rpx;
  position: absolute;
  top: 30rpx;
  right: -11rpx;
  transform: rotate(45deg);
  background-color: green;
 }
.img image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.nickname{
  text-align: center;
}

.form{
  width: 750rpx;
  height: 45px;
  background-color: #eee;
  position: fixed;
  bottom: 0;
  padding: 2px;
  box-sizing: border-box;
  display: flex;

}
.form input{
  height: 41px;
  line-height: 41px;
  padding: 0 5px;
  background-color: white;
  width: 500rpx;
}
.form button{
line-height: 41px;
width: 200rpx !important;
}